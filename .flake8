[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    ENV,
    .venv,
    migrations,
    */migrations/*,
    staticfiles,
    media
ignore = 
    E203,  # Whitespace before ':' (conflicto con black)
    W503,  # Line break before binary operator (conflicto con black)
per-file-ignores =
    __init__.py:F401
